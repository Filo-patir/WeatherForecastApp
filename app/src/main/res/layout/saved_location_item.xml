<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/saved_location_background"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/highLowValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/high_and_low"
        android:textColor="@color/secondary"
        app:layout_constraintStart_toStartOf="@+id/mainTemp"
        app:layout_constraintTop_toBottomOf="@+id/mainTemp" />

    <TextView
        android:id="@+id/mainTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="20Â°" />

    <ImageView
        android:id="@+id/iconImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/sun" />

    <TextView
        android:id="@+id/locationTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/highLowValue"
        app:layout_constraintTop_toBottomOf="@+id/highLowValue"
        tools:text="Alexandria, EG" />

    <ImageView
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iconImg"
        app:layout_constraintStart_toStartOf="@+id/iconImg"
        app:srcCompat="@drawable/icons8_trash_30" />

</androidx.constraintlayout.widget.ConstraintLayout>